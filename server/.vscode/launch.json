{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Attach to Nodemon Backend",
        "type": "node",
        "request": "launch",
        "skipFiles": [
          "<node_internals>/**"
        ],
        "program": "${workspaceFolder}/node_modules/nodemon/bin/nodemon.js",
        "args": [
          "--inspect=0.0.0.0:9229",
          "${workspaceFolder}/index.js"
        ],
        "localRoot": "${workspaceFolder}",
        "remoteRoot": "${workspaceFolder}"
      }
    ]
  }
  